---
import { education } from "@cv";
import { type Highlight } from "@/cv";
import Section from "@/components/Section.astro";
import Statement from "@/components/Statement.astro";
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(
        ({
          area,
          endDate,
          highlights,
          institution,
          score,
          startDate,
          summary,
          url,
        }) => {
          const formattedScore = score ? `Nota: ${score} / 10.0` : null;

          let keywords: Highlight = [];

          if (highlights) {
            keywords = [...highlights];
          }

          if (formattedScore) {
            keywords.unshift(formattedScore);
          }

          return (
            <Statement
              description={summary}
              endDate={endDate}
              keywords={keywords}
              place={institution}
              placerUrl={url}
              startDate={startDate}
              title={area}
            />
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
</style>
